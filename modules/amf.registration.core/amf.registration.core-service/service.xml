<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds"
                 package-path="com.amf.registration"
                 auto-import-default-references="false"
                 auto-namespace-tables="false"
>
    <namespace>AMFRegistration</namespace>
    <entity local-service="true"
            name="AMFUser"
            remote-service="true"
            uuid="true"
            table="amfuser">

        <column name="amfUserId" primary="true" type="long"/>
        <column name="groupId" type="long"/>

        <column name="companyId" type="long"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>
        <column name="userName" type="String"/>

        <column name="userId" type="long"/>
        <column name="addressId" type="long"/>

        <!-- User info fields -->
        <column name="homePhone" type="String"/>
        <column name="mobilePhone" type="String"/>

        <!-- relationship -->
        <column name="eventLogs" type="Collection" entity="AMFEventLog" mapping-table="eventlog"/>
        <order by="asc">
            <order-column name="userName"/>
        </order>

        <!-- Finder methods -->
        <finder name="GroupId" return-type="Collection">
            <finder-column name="groupId"/>
        </finder>
        <reference entity="AMFEventLog" package-path="com.amf.registration"/>
        <reference entity="Group" package-path="com.liferay.portal"/>
    </entity>

    <entity local-service="true"
            name="AMFEventLog"
            remote-service="false"
            uuid="true"
            table="amfeventlog">

        <column name="amfEventLogId" primary="true" type="long"/>
        <column name="companyId" type="long"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>
        <column name="groupId" type="long"/>
        <column name="userGroupId" type="long"/>
        <column name="userId" type="long"/>
        <column name="lastLoginDate" type="Date"/>
        <column name="lastLoginIP" type="String"/>
        <column name="status" type="String"/>
        <!-- relationship -->
        <column name="amfUsers"  type="Collection" entity="AMFUser" mapping-table="eventlog"/>

        <!-- Order -->
        <order by="asc">
            <order-column name="lastLoginDate"/>
        </order>

        <reference entity="AMFUser" package-path="com.amf.registration"/>
        <reference entity="Group" package-path="com.liferay.portal"/>
    </entity>

    <exceptions>
        <exception>AMFEventLogValidation</exception>
        <exception>AMFUserValidation</exception>
    </exceptions>

</service-builder>